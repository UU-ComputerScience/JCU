#doc
  margin auto /* center in viewport */
  width 970px /* fix page width */

/* arbitrary content styling */
#hd, .yui3-g .content, #ft
  border 5px solid #ccc
  margin-right 10px /* gutter between columns */

#hd
  height 64px

#ft
  height 51px

#rules-tree-view input[type=text]
  width 350px

#rules-tree-view ol, ul, dl
#rules-list-view ol, ul, dl
  margin 0 0 20px 0

#rules-list-view li
  height 30px

#rules-list-view .ui-draggable
  width 290px
  padding 5px
  margin 0px
  border 1px solid black
  background-color white

#rules-tree-view .ui-droppable
  padding 5px

.dropHover
  background-color lightgreen

.btnDeleteList
  float right

#faccompsci
  text-align right
  float right
  font-weight bold

.uured
  color rgb(146, 21, 37)

#header
  font-size 29px

#header img
  vertical-align middle
